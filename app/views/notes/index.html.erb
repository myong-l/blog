<%- model_class = Note -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.pluralize.titleize %></h1>
</div>
<ul class="row">
  <% @notes.each do |note| %>
    <li class="col-lg-3">
      <a href="<%= note_path(note)%>">
        <h2><%= note.title %></h2>
        <p><%= note.note %></p>
        <b><%= note.created_at %></b>
        <div class="row">
          <div class="col-lg-4">
            <% if @user.image? %>
              <%= image_tag @user.image.thumb.url, :size => "50x50" %>
            <% else %>
              <%= image_tag '/noimage.gif', :size => "50x50" %>
  　　       <% end %>
          </div>
          <div class="col-lg-8">
            <h3><%= note.user.username %></h3>
          </div>
        </div>
      </a>
    </li>
  <% end %>
</ul>
<%= link_to t('.new', :default => t("helpers.links.new")),
            new_note_path,
            :class => 'btn btn-primary' %>
