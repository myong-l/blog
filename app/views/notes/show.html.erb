<%- model_class = Note -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.titleize %></h1>
</div>

  <div><strong><%= model_class.human_attribute_name(:title) %>:</strong></div>
  <div><%= @note.title %></div>
  <div><strong><%= model_class.human_attribute_name(:note) %>:</strong></div>
  <div><%= @note.note %></div>
  <div id="contents">
    <ul class="row page">
      <%= render 'contents'%>
    </ul>
  </div>
<%= paginate @contents %>
<%= render "comments/form" %>
<%= link_to t('.back', :default => t("helpers.links.back")),
              notes_path, :class => 'btn btn-default'  %>


