<%- model_class = Note -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.titleize %></h1>
</div>

<dl class="dl-horizontal">
  <dt><strong><%= model_class.human_attribute_name(:title) %>:</strong></dt>
  <dd><%= @note.title %></dd>
  <dt><strong><%= model_class.human_attribute_name(:note) %>:</strong></dt>
  <dd><%= @note.note %></dd>
  <% @note.contents.each do |content| %>
  <dt><strong><%= Content.human_attribute_name(:text) %>:</strong></dt>
  <dd><%= content.text %></dd>
   <dt></dt>
   <dd><%= image_tag content.content_img.url %></dd>
<% end %>
</dl>
<%= link_to t('.back', :default => t("helpers.links.back")),
              notes_path, :class => 'btn btn-default'  %>
